<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="dimascorporation_workwithdatabase_post">
        <column xsi:type="int" name="id" identity="false" unsigned="true" nullable="false"
                comment="Entity Id"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Post Name"/>
        <column xsi:type="varchar" name="url_key" length="255" comment="Post URL Key"/>
        <column xsi:type="longtext" name="post_content" comment="Post Content"/>
        <column xsi:type="varchar" name="tags" length="255" comment="Post Tags"/>
        <column xsi:type="int" name="status" comment="Post Status"/>
        <column xsi:type="varchar" name="featured_image" length="255" comment="Post Featured Image"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
